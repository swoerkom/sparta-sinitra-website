<form method="post">
  <div>
    <label>Genre Name</label>
    <input type="text" name="name" placeholder="Enter a Genre" value="<%= @genre.name %>">
  </div>
  <div>
    <input class="btn-primary" type="submit" value="Add Genre">
  </div>
  <% if(!@genre.genreid) %>
    <input type="hidden" name="_method" value="put">
  <% end %>
</form>
